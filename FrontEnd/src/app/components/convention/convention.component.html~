<div class="container mt-4">
  <!-- Affichage pendant le chargement -->
  <div *ngIf="loading" class="text-center">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Chargement...</span>
    </div>
    <p class="mt-2">Chargement des détails de la convention...</p>
  </div>

  <!-- Affichage des données -->
  <div *ngIf="convention && !loading">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">

        <h3 class="card-title">Détails de la convention</h3>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h5 class="text-muted">Informations de base</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
              <li class="list-group-item">
                <strong>Description:</strong>
                {{ convention.description }}
              </li>
              <li class="list-group-item">
                <strong>Date de signature:</strong>
                {{ convention.dateConv | date: 'dd/MM/yyyy HH:mm:ss' }}
              </li>
              <li class="list-group-item">
                <strong>Statut:</strong>
                <span class="badge ms-2" [ngClass]="convention.signed ? 'bg-success' : 'bg-danger'">
                  {{ convention.signed ? 'Signée' : 'Non signée' }}
                </span>
              </li>
              <li class="list-group-item">
                <strong>ID Stage:</strong>
                {{ convention.internshipId }}
              </li>
            </ul>
          </div>

          <div class="col-md-6">
            <h5 class="text-muted">Termes associés</h5>
            <div class="accordion" id="termsAccordion">
              <div *ngFor="let term of convention.terms; let i = index" class="accordion-item">
                <h3 class="accordion-header" [id]="'heading' + i">
                  <button class="accordion-button collapsed" type="button"
                          data-bs-toggle="collapse"
                          [attr.data-bs-target]="'#collapse' + i">
                    <p class="mb-0"><strong>Titre:</strong></p>
                    {{ term.title }}
                  </button>
                </h3>
                <div [id]="'collapse' + i" class="accordion-collapse collapse"
                     [attr.aria-labelledby]="'heading' + i"
                     data-bs-parent="#termsAccordion">
                  <div class="accordion-body">
                    <p class="mb-0"><strong>Description:</strong></p>
                    {{ term.description }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card-footer bg-light">
        <button class="btn btn-outline-primary" (click)="returnToList()">
          <i class="bi bi-arrow-left"></i> Retour à la liste
        </button>
      </div>
    </div>
  </div>

  <!-- Message d'erreur -->
  <div *ngIf="errorMessage" class="alert alert-danger mt-3">
    {{ errorMessage }}
    <button class="btn btn-link" (click)="returnToList()">
      Retour à la liste des conventions
    </button>
  </div>
</div>
